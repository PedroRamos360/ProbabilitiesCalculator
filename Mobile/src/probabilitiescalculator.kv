<Rootwidget>:
    canvas.before:
        Color:
            rgba: 199.0/255, 211.0/255, 221.0/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Screen:
        name: "StartScreen"
        StartScreen:
    Screen:
        name: "ArrangementsScreen"
        ArrangementsScreen:
    Screen:
        name: "CombinationsScreen"
        CombinationsScreen:
    Screen:
        name: "PermutationsScreen"
        PermutationsScreen:


<StartScreen>:
    orientation: "vertical"

    Title:
        text: "Probabilities\nCalculator"

    PrimaryButton:
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
		text: "Arrangements"
		on_press: root.on_arrangements_pressed()

    PrimaryButton:
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
		text: "Combinations"
		on_press: root.on_combinations_pressed()

    PrimaryButton:
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
		text: "Permutations"
	    on_press: root.on_permutations_pressed()


<ArrangementsScreen>:
    elements_input: elements_input
    arrangements_input: arrangements_input

    Title:
        text: "Arrangements"

    BackButton:
        on_press: app.go_back()

    CustomLabel:
        text: "Total elements"
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}

    CustomTextInput:
        id: elements_input
        pos_hint: {'center_x': 0.5, 'center_y': 0.65}

    CustomLabel:
        text: "Elements per group"
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}

    CustomTextInput:
        id: arrangements_input
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}

    CalculateButton:
        on_press: root.on_calculate()

    ResultOutput:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

<CombinationsScreen>:
    elements_input: elements_input
    combinations_input: combinations_input

    Title:
        text: "Combinations"

    BackButton:
        on_press: app.go_back()

    CustomLabel:
        text: "Total elements"
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}

    CustomTextInput:
        id: elements_input
        pos_hint: {'center_x': 0.5, 'center_y': 0.65}

    CustomLabel:
        text: "Elements per group"
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}

    CustomTextInput:
        id: combinations_input
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}

    CalculateButton:
        on_press: root.on_calculate()

    ResultOutput:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size


<PermutationsScreen>:
    elements_input: elements_input
    repetitions_input: repetitions_input

    Title:
        text: "Permutations"

    BackButton:
        on_press: app.go_back()

    CustomLabel:
        text: "Total elements"
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}

    CustomTextInput:
        id: elements_input
        pos_hint: {'center_x': 0.5, 'center_y': 0.65}

    CustomLabel:
        text: "Repetitions"
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}

    CustomTextInput:
        id: repetitions_input
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
        multiline: True

    CalculateButton:
        on_press: root.on_calculate()

    ResultOutput:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
