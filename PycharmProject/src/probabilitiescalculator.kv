<Rootwidget>:
    Screen:
        name: "StartScreen"
        StartScreen:
    Screen:
        name: "ArrangementsScreen"
        ArrangementsScreen:
    Screen:
        name: "CombinationsScreen"
        CombinationsScreen:
    Screen:
        name: "PermutationsScreen"
        PermutationsScreen:


<StartScreen>:
    orientation: "vertical"
    BoxLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.95, 0.95
        canvas.before:
            Color:
                rgba: 74/255, 114/255, 255/255, 1
            Rectangle:
                pos: self.pos
                size: self.size


    Label:
        font_name: "RobotoMono-Regular"
        font_size: 50
        width: 200
        height: 50
        pos_hint: {'center_x': 0.5, 'center_y': 0.85}
        text: "Probabilities Calculator"
        color: 1, 1, 1, 1

    PrimaryButton:
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
		text: "Arrangements"
		on_press: root.on_arrangements_pressed()

    PrimaryButton:
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
    	center_y: 280
		text: "Combinations"
		on_press: root.on_combinations_pressed()

    PrimaryButton:
        pos_hint: {'center_x': 0.5, 'center_y': 0.2}
		center_y: 160
		text: "Permutations"
	    on_press: root.on_permutations_pressed()


<ArrangementsScreen>:
    elements_input: elements_input
    arrangements_input: arrangements_input
    BoxLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.95, 0.95
        canvas.before:
            Color:
                rgba: 74/255, 114/255, 255/255, 1
            Rectangle:
                pos: self.pos
                size: self.size


    BackButton:
        on_press: app.go_back()

    CustomLabel:
        center_x: 100
        text: "A"

    CustomLabel:
        center_x: 150
        text: "n"

    CustomTextInput:
        id: elements_input
        center_x: 200

    CustomLabel:
        center_x: 250
        text: "p"

    CustomTextInput:
        id: arrangements_input
        center_x: 300

    CustomLabel:
        center_x: 350
        text: "="

    CalculateButton:
        on_press: root.on_calculate()

<CombinationsScreen>:
    elements_input: elements_input
    combinations_input: combinations_input
    BoxLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.95, 0.95
        canvas.before:
            Color:
                rgba: 74/255, 114/255, 255/255, 1
            Rectangle:
                pos: self.pos
                size: self.size

    BackButton:
        on_press: app.go_back()

    CustomLabel:
        center_x: 100
        text: "C"

    CustomLabel:
        center_x: 150
        text: "n"

    CustomTextInput:
        id: elements_input
        center_x: 200

    CustomLabel:
        center_x: 250
        text: "p"

    CustomTextInput:
        id: combinations_input
        center_x: 300

    CustomLabel:
        center_x: 350
        text: "="

    CalculateButton:
        on_press: root.on_calculate()


<PermutationsScreen>:
    elements_input: elements_input
    repetitions_input: repetitions_input

    BoxLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.95, 0.95
        canvas.before:
            Color:
                rgba: 74/255, 114/255, 255/255, 1
            Rectangle:
                pos: self.pos
                size: self.size

    BackButton:
        on_press: app.go_back()

    CustomLabel:
        center_x: 100
        text: "P"

    CustomLabel:
        center_x: 150
        text: "n"

    CustomTextInput:
        id: elements_input
        center_x: 200

    CustomLabel:
        center_x: 250
        text: "r"

    CustomTextInput:
        id: repetitions_input
        multiline: True
        center_x: 300

    CustomLabel:
        center_x: 350
        text: "="

    CalculateButton:
        on_press: root.on_calculate()


