#:import c src.colors

#:import PrimaryButton src.widgets.primary_button.PrimaryButton
#:import CustomLabel src.widgets.custom_label.CustomLabel
#:import CustomTextInput src.widgets.custom_text_input.CustomTextInput
#:import BackButton src.widgets.back_button.BackButton
#:import CalculateButton src.widgets.calculate_button.CalculateButton

<Rootwidget>:
    Screen:
        name: "StartScreen"
        StartScreen:
    Screen:
        name: "ArrangementsScreen"
        ArrangementsScreen:
    Screen:
        name: "CombinationsScreen"
        CombinationsScreen:
    Screen:
        name: "PermutationsScreen"
        PermutationsScreen:


<StartScreen>:
    orientation: "vertical"
    Label:
        size_hint: None, None
        font_size: 50
        width: 200
        height: 50
        center_x: 400
        center_y: 520
        text: "Probabilities Calculator"
        color: c.white

    PrimaryButton:
        center_y: 400
		text: "Arrangements"
		on_press: root.on_arrangements_pressed()

    PrimaryButton:
    	center_y: 280
		text: "Combinations"
		on_press: root.on_combinations_pressed()

    PrimaryButton:
		center_y: 160
		text: "Permutations"
	    on_press: root.on_permutations_pressed()


<ArrangementsScreen>:

    elements_input: elements_input
    arrangements_input: arrangements_input

    BackButton:
        on_press: app.go_back()

    CustomLabel:
        center_x: 100
        text: "A"

    CustomLabel:
        center_x: 150
        text: "n"

    CustomTextInput:
        id: elements_input
        center_x: 200

    CustomLabel:
        center_x: 250
        text: "p"

    CustomTextInput:
        id: arrangements_input
        center_x: 300

    CustomLabel:
        center_x: 350
        text: "="

    CalculateButton:
        on_press: root.on_calculate()

<CombinationsScreen>:

    elements_input: elements_input
    combinations_input: combinations_input

    BackButton:
        on_press: app.go_back()

    CustomLabel:
        center_x: 100
        text: "C"

    CustomLabel:
        center_x: 150
        text: "n"

    CustomTextInput:
        id: elements_input
        center_x: 200

    CustomLabel:
        center_x: 250
        text: "p"

    CustomTextInput:
        id: combinations_input
        center_x: 300

    CustomLabel:
        center_x: 350
        text: "="

    CalculateButton:
        on_press: root.on_calculate()


<PermutationsScreen>:

    elements_input: elements_input
    repetitions_input: repetitions_input

    BackButton:
        on_press: app.go_back()

    CustomLabel:
        center_x: 100
        text: "P"

    CustomLabel:
        center_x: 150
        text: "n"

    CustomTextInput:
        id: elements_input
        center_x: 200

    CustomLabel:
        center_x: 250
        text: "p"

    CustomTextInput:
        id: repetitions_input
        multiline: True
        center_x: 300

    CustomLabel:
        center_x: 350
        text: "="

    CalculateButton:
        on_press: root.on_calculate()


