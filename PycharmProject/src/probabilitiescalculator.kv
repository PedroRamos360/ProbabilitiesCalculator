#:import c src.colors
#:import bt src.widgets.primary_button.PrimaryButton

<StartScreen>:
    orientation: "vertical"
    Label:
        size_hint: None, None
        font_size: 50
        width: 200
        height: 50
        center_x: 400
        center_y: 520
        text: "Probabilities Calculator"
        color: c.white

    PrimaryButton:
        center_y: 400
		text: "Arrangements"
		on_press: root.on_button1_pressed()

    PrimaryButton:
    	center_y: 280
		text: "Combinations"

    PrimaryButton:
		center_y: 160
		text: "Permutations"

<ArrangementsScreen>:

    elements_input: elements_input
    arrangements_input: arrangements_input

    Label:
        size_hint: None, None
        font_size: 20
        width: 50
        height: 50
        center_y: 300
        center_x: 100
        text: "A"

    Label:
        size_hint: None, None
        font_size: 20
        width: 50
        height: 50
        center_y: 300
        center_x: 150
        text: "n"

    TextInput:
        id: elements_input
        size_hint: None, None
        width: 50
        height: 50
        center_y: 300
        center_x: 200
        multiline: False
        input_filter: "int"

    Label:
        size_hint: None, None
        font_size: 20
        width: 50
        height: 50
        text: "p"
        center_y: 300
        center_x: 250

    TextInput:
        id: arrangements_input
        size_hint: None, None
        width: 50
        height: 50
        center_y: 300
        center_x: 300
        multiline: False
        input_filter: "int"

    Label:
        size_hint: None, None
        font_size: 20
        width: 50
        height: 50
        center_y: 300
        center_x: 350
        text: "="

    Button:
        size_hint: None, None
        font_size: 20
        width: 250
        height: 50
        center_y: 250
        center_x: 220
        text: "Calculate"
        on_press: root.on_calculate()
